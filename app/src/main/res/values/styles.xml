<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Theme.App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Theme.App.MediumComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Theme.App.Button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Theme.App.MaterialButton.Primary" parent="Widget.Theme.App.MaterialButton">
        <item name="backgroundTint">@color/pelorous</item>
    </style>

    <style name="Widget.Theme.App.MaterialButton.Secondary" parent="Widget.Theme.App.MaterialButton">
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/bondy_blue</item>
    </style>

    <style name="Widget.Theme.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Theme.App.Body1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>
</resources>